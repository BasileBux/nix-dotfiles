{
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrains Mono",
    "editor.minimap.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "oxocarbon",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "fluent-icons",
    "debug.onTaskErrors": "debugAnyway",
    "vim.leader": " ",
    "editor.cursorSurroundingLines": 10,
    "vim.normalModeKeyBindingsNonRecursive": [
        // Create splits
        {
            "before": [
                "leader",
                "v"
            ],
            "commands": [
                ":vsplit"
            ]
        },
        {
            "before": [
                "leader",
                "s"
            ],
            "commands": [
                ":split"
            ]
        },
        // Navigate Panes
        {
            "before": [
                "H"
            ],
            "commands": [
                "workbench.action.focusLeftGroup"
            ]
        },
        {
            "before": [
                "J"
            ],
            "commands": [
                "workbench.action.focusBelowGroup"
            ]
        },
        {
            "before": [
                "K"
            ],
            "commands": [
                "workbench.action.focusAboveGroup"
            ]
        },
        {
            "before": [
                "L"
            ],
            "commands": [
                "workbench.action.focusRightGroup"
            ]
        },
        {
            "before": [
                "<C-j>"
            ],
            "commands": [
                "harpoon-vscode.prevFile"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "commands": [
                "harpoon-vscode.nextFile"
            ]
        },
        {
            "before": [
                "leader",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        },
        {
            "before": [
                "leader",
                "s",
                "f"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "leader",
                "t"
            ],
            "commands": [
                "harpoon-vscode.addFile"
            ]
        },
        {
            "before": [
                "[",
                "d"
            ],
            "commands": [
                "editor.action.marker.prev"
            ]
        },
        {
            "before": [
                "]",
                "d"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "editor.action.showDefinitionPreviewHover"
            ]
        },
        {
            "before": [
                "O",
                "O"
            ],
            "commands": [
                "editor.action.insertLineAfter"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<esc>"
            ]
        },
        {
            "before": [
                "k",
                "j"
            ],
            "after": [
                "<esc>"
            ]
        },
    ],
    "vim.useSystemClipboard": true,
    "editor.lineNumbers": "relative",
    "extensions.ignoreRecommendations": true,
    "window.menuBarVisibility": "toggle",
    // "editor.glyphMargin": false, // if this is on, you can't put breakpoints
    "editor.showFoldingControls": "never",
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 90,
    "[markdown]": {
        "editor.wordWrap": "bounded"
    },
    "vim.textwidth": 90,
    "editor.rulers": [
        90
    ],
    "editor.stickyScroll.scrollWithEditor": false,
    "workbench.tree.enableStickyScroll": false,
    "editor.stickyScroll.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "makefile.configureOnOpen": true,
    "workbench.startupEditor": "none",
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4 }",
    "redhat.telemetry.enabled": false,
    "terminal.integrated.fontFamily": "GeistMono NF",
    // Keep only filename from breadcrumbs
    "breadcrumbs.filePath": "last",
    "breadcrumbs.showArrays": false,
    "breadcrumbs.showBooleans": false,
    "breadcrumbs.showClasses": false,
    "breadcrumbs.showConstants": false,
    "breadcrumbs.showConstructors": false,
    "breadcrumbs.showEnumMembers": false,
    "breadcrumbs.showEnums": false,
    "breadcrumbs.showEvents": false,
    "breadcrumbs.showFields": false,
    "breadcrumbs.showFiles": false,
    "breadcrumbs.showFunctions": false,
    "breadcrumbs.showInterfaces": false,
    "breadcrumbs.showKeys": false,
    "breadcrumbs.showMethods": false,
    "breadcrumbs.showModules": false,
    "breadcrumbs.showNamespaces": false,
    "breadcrumbs.showNull": false,
    "breadcrumbs.showNumbers": false,
    "breadcrumbs.showObjects": false,
    "breadcrumbs.showOperators": false,
    "breadcrumbs.showPackages": false,
    "breadcrumbs.showProperties": false,
    "breadcrumbs.showStrings": false,
    "breadcrumbs.showStructs": false,
    "breadcrumbs.showTypeParameters": false,
    "breadcrumbs.showVariables": false,
    "breadcrumbs.symbolPath": "off",
    "notebook.breadcrumbs.showCodeCells": false,
    "terminal.integrated.accessibleViewPreserveCursorPosition": true,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "workbench.panel.defaultLocation": "right",
    "workbench.activityBar.location": "bottom",
    "git.enabled": true,
    "workbench.editor.enablePreview": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.editor.showTabs": "none",
}